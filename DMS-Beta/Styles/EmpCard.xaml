<UserControl x:Class="DMS_Beta.Styles.EmpCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMS_Beta.Styles"
             mc:Ignorable="d" Loaded="CardLoad"
             d:DesignHeight="110" d:DesignWidth="110">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border x:Name="border" BorderThickness="1" BorderBrush="Black" CornerRadius="35" Height="70" Width="70">
                <Border.Background>
                    <ImageBrush x:Name="emp_cover" Stretch="Fill"/>
                </Border.Background>
            </Border>
            <TextBlock x:Name="name" Text="نام کارمند" Margin="0 5 0 0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
